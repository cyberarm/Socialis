!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Socialis"
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)
  %body
    #container
      %center
        %img{:src => "/images/socialis-logo.png"}
        #menu
          %br/
          %a{:href => root_url, :class => "menu"} Home
          %a{:href => about_path, :class => "menu"} About
          %a{:href => help_path, :class => "menu"} Help
          %a{:href => statuses_path, :class => "menu"} Statuses
          %br/
          %br/
          #prfilebox
            - if logged_in?
              %h1 Welcome, <a href="/profiles/#{current_user.username}" title="View your public profile at: #{request.url}profiles/#{current_user.username}">#{current_user.username.first_capitalize}</a>!
              %br/
              %a{:href => "/status/new", :class => "menu"} Update My Status
              %a{:href => "/profile", :class => "menu"} My Profile
              \#{link_to "Account" , edit_current_user_path, :class => "menu"}
              \#{link_to "Log out", logout_path, :class => "menu", :style => "background-color: orange;"}
            - else
              = link_to "Sign up", signup_path, :class => "menu", :style => "background-color: orange;"
              %b
                or
              \#{link_to "log in", login_path, :class => "menu", :style => "background-color: orange;"}.
          %br/
          %br/
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = content_tag :h1, yield(:title) if show_title?
        = yield
        %br/
