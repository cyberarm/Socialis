!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Socialis"
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)
  %body
    #container
      %center
        #profilebox
          - if logged_in?
            <a href="/profiles/#{current_user.username}">
            = gravatar_image_tag(current_user.email, :gravatar => { :secure => true, :default => 'http://github.com/images/gravatars/gravatar-80.png', :size => 64 })
            </a>
            %p Welcome #{current_user.username}!
            %p
              \#{link_to "Account" , edit_current_user_path}
            %p
              \#{link_to "Log out", logout_path}
          - else
            = link_to "Sign up", signup_path
            or
            \#{link_to "log in", login_path}.
        %p{:style => "font-size: 45px; text-shadow: 0px 0px 6px black; color: #b3f609;"} Socialis
        #menu
          %br/
          %a{:href => "/", :class => "menu"} Home
          %a{:href => "/status", :class => "menu"} Statuses
          - if logged_in?
            %a{:href => "/status/new", :class => "menu"} New Status
            %a{:href => "/profiles/#{current_user.username}", :class => "menu"} My Profile
          %br/
          %br/
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = content_tag :h1, yield(:title) if show_title?
        = yield
        %br/
